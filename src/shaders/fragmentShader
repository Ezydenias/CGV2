#version 400 core

in vec3 color;
in vec2 pass_textureCoordinate;

out vec4 out_Color;

uniform sampler2D textureSampler;

void main(void){

    vec4 colorin = vec4(color,1.0);
    //out_Color=texture(textureSampler,pass_textureCoordinate);
    vec4 texturein=texture(textureSampler,pass_textureCoordinate);
    out_Color=colorin*texturein;
}